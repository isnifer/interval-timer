.partials
  display none
  width 700px

  &_visible
    display block
  
  &__timer-name
    font-size 20px
    font-weight bold

  &__label
    display block
    padding 5px 0

  &__name
    float left
    margin-right 10px
    min-width: 80px

  &__input
    overflow hidden
    padding 0 20px
    width 200px
  
  &__divider
    width 452px
    margin 10px 0
    border-top 1px dashed #000

  &__content
    padding-bottom 10px