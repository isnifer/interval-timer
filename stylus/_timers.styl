.timers
  margin 20px 0 0
  overflow hidden
  width 200px
  height 510px
  border-top-right-radius 5px
  border-bottom-right-radius 5px
  background #2c3e50
  border-left 1px solid #fff

  &__list
    margin 0
    padding 0
    list-style none

  &__item
    position relative
    font-weight bold
    font-size 1.4em
    padding 5px 0 5px 20px
    cursor pointer
    border-bottom 1px solid #fff

    &:hover
      background #fff
      color #c0392b

  &__remove
    text-indent -9999px
    display inline-block
    width 16px
    height 16px
    cursor pointer
    margin-left 10px
    position relative

    &:after
      position absolute
      top 8px
      left 0
      display block
      width 16px
      height 16px
      content ""
      background url("data:image/png;base64,") no-repeat 0 0

    &:hover:after
      background-position 0 -16px