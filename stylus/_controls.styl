.controls 

  &__view-form
    display inline-block
    margin 0
    color #e67e22
    font-weight bold
    font-size 2em
    cursor pointer

    &:hover
      color #d35400

  &__form
    padding 15px 0 0
    
    &_state_hidden
      display none

  &__name-block

    &_hidden
      display none

  &__create
    position relative
    display block
    margin 20px 0 0
    padding 13px 0
    width 200px
    outline none
    border 0
    background #2c3e50
    color #fff
    font-weight bold
    line-height 1

    &:hover
      background #34495e

    &:active
      top 2px
      left 2px
