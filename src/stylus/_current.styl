.current
  display block
  float left
  margin 20px 0 0
  padding 10px
  width 498px
  height 510px
  border-top-left-radius 5px
  border-bottom-left-radius 5px
  background #2c3e50

  &_visible
    display block

  &__header
    padding 0 0 10px
    color #f1c40f
    text-align center
    text-shadow 1px 1px 2px #000
    font-weight bold
    font-size 3em
    line-height 1
    -webkit-font-smoothing: antialiased

  &__action-title
    color #d35400
    text-align center
    font-weight bold
    font-size 2em

  &__action-time
    margin 20px 0 10px
    color #27ae60
    text-align center
    font-weight bold
    font-size 8em

    &_small
      color #c0392b
  
  &__circles
    padding-bottom 20px
    color #fff
    text-align center
    font-weight bold
    font-size 2em

  &__footer
    text-align center

  &__elapsed
    display inline-block
    width calc(50% - 10px)
    color #fff
    vertical-align top

    &-time
      font-size 2em

  &__remaining
    display inline-block
    width calc(50% - 10px)
    color #fff

    &-time
      color #27ae60
      font-size 2em

  &__footer-title
    margin 0 0 20px
    font-size 20px
    line-height 1

  &__controls
    padding 10px 0
    text-align center

    button
      margin 0 10px
      padding 5px 0
      width 100px
      border 0
      color #fff
      font-weight bold

      &[disabled]
        opacity 0.5

  &__start
    background #2ecc71

    &:hover, &[disabled], &:hover[disabled]
      background #27ae60

  &__pause
    background #e67e22

    &:hover, &[disabled], &:hover[disabled]
      background #d35400

  &__stop
    background #9b59b6

    &:hover, &[disabled], &:hover[disabled]
      background #8e44ad